<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

  <!-- Background color -->
  <solid android:color="@android:color/white" />

  <!-- Border color and width -->
  <stroke
      android:width="2dp"
      android:color="#BDBDBD" /> <!-- Light gray border -->

  <!-- Rounded corners -->
  <corners android:radius="8dp" />

  <!-- Padding inside the EditText -->
  <padding
      android:left="10dp"
      android:top="10dp"
      android:right="10dp"
      android:bottom="10dp" />
</shape>
