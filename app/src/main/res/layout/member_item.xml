<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E0F7FA"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="#B3E5FC"
    android:backgroundTintMode="src_atop">

    <TextView
        android:id="@+id/tvMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Name:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile No.:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMemberRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Role:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSubscriptionAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscription Amt.:"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tvLoanAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="12dp"
            android:gravity="center"
            android:text="Loan Amount"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDepositAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="12dp"
            android:gravity="center"
            android:text="Deposit Amount"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
